<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Chose"
             >
    <StackLayout>
        <Label  Text="最多加入九個選擇" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="Black"  FontSize="20" />
        <Frame   BackgroundColor="White" WidthRequest="400" HeightRequest="590" CornerRadius="10" >
            <FlexLayout x:Name="outputFlexLayout" Direction="Column" JustifyContent="Start" AlignItems="Start" AlignContent="Start"/>
        </Frame>
        <Entry x:Name="inputEntry" Placeholder="在此输入食物或店家" />
        <Button Text="加入" Clicked="OnShowTextClicked" WidthRequest="100" HeightRequest="50" />
        <Button Text="前往選擇" Clicked="OnClicked" Margin="20" />
    </StackLayout>
</ContentPage>